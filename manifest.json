{
    "name": "Measurement Converter",
    "version": "0.4.2",
    "description": "Automatically converts measurements to the Metric system.",
    "manifest_version": 2,
    "icons": {
        "16": "assets/16px.png",
        "48": "assets/48px.png",
        "128": "assets/128px.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "css": [
                "src/converter.css"
            ],
            "js": [
                "lib/he.js",
                "src/converter.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "content_security_policy": "default-src 'none'"
}