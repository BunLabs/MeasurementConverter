{
    "name": "Measurement Converter",
    "version": "0.2.0",
    "description": "Automatically converts measurements to the Metric system.",
    "manifest_version": 3,
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "css": [
                "src/converter.css"
            ],
            "js": [
                "lib/he.js",
                "src/converter.js"
            ],
            "run_at": "document_idle"
        }
    ]
}